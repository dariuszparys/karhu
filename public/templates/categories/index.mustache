<h2>{{?categories}}</h2>

<nav class="category_nav">
  <ul>
    <li>
      <a href="#/categories/new" class="button" data-key="a">
        <div class="underline">{{?add_category}}</div>
      </a>
    </li>
  </ul>
</nav>

<table class="categories_table">
  <thead>
    <tr>
      <th>{{?name}}</th>
      <th>{{?description}}</th>
      <th>{{?actions}}</th>
    </tr>
  </thead>
  {{#categories}}
    <tr>
      <td>{{name}}</td>
      <td>{{description}}</td>
      <td class="actions">
        {{#id}}
          <a href="#/categories/{{id}}/edit" class="button" title="Edit {{name}}">{{?edit}}</a>
          <form method="delete" action="#/categories/{{id}}" class="delete_form">
            <input type="hidden" name="name" value="{{name}}" />
            <input type="submit" value="{{?remove}}" />
          </form>
        {{/id}}
      </td>
    </tr>
  {{/categories}}  
</table>