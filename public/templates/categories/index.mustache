<h2>Categories</h2>

<nav class="category_nav">
  <ul>
    <li><a href="#/categories/new" class="button">Add Category</a></li>
  </ul>
</nav>

<table class="categories_table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  {{#categories}}
    <tr>
      <td>{{name}}</td>
      <td>{{description}}</td>
      <td class="actions">
        {{#id}}
          <a href="#/categories/{{id}}/edit" class="button" title="Edit {{name}}">edit</a>
          <form method="delete" action="#/categories/{{id}}" class="delete_form">
            <input type="hidden" name="name" value="{{name}}" />
            <input type="submit" value="delete" />
          </form>
        {{/id}}
      </td>
    </tr>
  {{/categories}}  
</table>